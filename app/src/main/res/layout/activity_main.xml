<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/icon_stealth"
    tools:context=".main.ui.MainActivity">

    <fragment
        android:id="@+id/fragment_container_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:navGraph="@navigation/fragment_navigation"
        app:defaultNavHost="true"
        android:name="androidx.navigation.fragment.NavHostFragment"
        app:layout_constraintBottom_toTopOf="@+id/bottom_bar_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"/>


    <me.ibrahimsn.lib.SmoothBottomBar
        android:id="@+id/bottom_bar_menu"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:elevation="20dp"
        app:backgroundColor="@color/white"
        app:cornerRadius="20dp"
        app:duration="175"
        app:iconSize="@dimen/_20ssp"
        app:iconTint="@color/icon_stealth"
        app:iconTintActive="@color/white"
        app:indicatorColor="@color/selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu"
        app:textColor="@color/white"
        tools:ignore="MissingClass" />
</androidx.constraintlayout.widget.ConstraintLayout>